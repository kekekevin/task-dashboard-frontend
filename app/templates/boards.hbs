<div class="page-header">
  <h1>Available Boards</h1>
  <p class="lead">
    List of available task boards <a href="#" class="btn btn-primary pull-right">New Board</a>
  </p>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Board</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |board|}}
      <tr>
        <td>{{#link-to 'board' board}}{{board.name}}{{/link-to}}</td>
        <td>{{board.description}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
