{{#create-modal title='Add Board' onSave=(action 'saveBoard')}}
  <div class="form-group">
    <label for="name">name</label>
    {{input id="name" type="text" classNames="form-control" placeholder="Name" value=board.name}}
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    {{input id="description" type="text" classNames="form-control" placeholder="Description" value=board.description}}
  </div>
  <div class="form-group">
    <label for="time-zone" class="control-label">Time zone</label>
    {{view "select" id="time-zone" classNames="form-control" content=timeZones value=board.timeZone}}
  </div>
{{/create-modal}}

<div class="page-header">
  <h1>Available Boards</h1>
  <p class="lead">
    List of available task boards <span class="pull-right">{{#default-button onClick=(action 'showModal')}}Add Board{{/default-button}}</span>
  </p>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Board</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |board|}}
      <tr>
        <td>{{#link-to 'board' board}}{{board.name}}{{/link-to}}</td>
        <td>{{board.description}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
